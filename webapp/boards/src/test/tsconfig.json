{
	"compilerOptions": {
		"jsx": "react",
		"target": "es2019",
		"module": "commonjs",
		"esModuleInterop": true,
		"noImplicitAny": true,
		"strict": true,
		"strictNullChecks": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": true,
		"allowJs": true,
		"resolveJsonModule": true,
		"incremental": false,
		"outDir": "./dist",
		"moduleResolution": "node",
        "typeRoots": [
            "./src/types",
            "./node_modules/@types"
        ]
	},
	"include": [
        "src",
	],
	"exclude": [
        ".git",
		"**/node_modules/*",
		"pack",
        "dist",
        "node_modules",
        "!node_modules/@types"
    ]
}
